<%- include ('partials/headerLogin'); -%>

<body class="text-center formQuote_body">

<main class="form-quote-form w-100 m-auto">
    <div class="container">
        <h1>Submitted Quotes:</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Gallons Requested</th>
                <th>Delivery Address</th>
                <th>Delivery Date</th>
                <th>Suggested Price</th>
                <th>Total Amount Due</th>
            </tr>
            </thead>
            <tbody>
            <% quotes.forEach(function(quote) { %>
                <tr>
                    <td><%= quote.gallons %></td>
                    <td><%= quote.delivery_address %></td>
                    <td><%= quote.delivery_date %></td>
                    <td><%= quote.suggested_price %></td>
                    <td><%= quote.total_amount %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</main>

<%- include ('partials/footer'); -%>
